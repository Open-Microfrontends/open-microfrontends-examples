{
  "name": "@open-microfrontends/examples-browser-standalone-hello-world-microfrontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@open-microfrontends/types": "file:../../../open-microfrontends/packages/types",
    "@open-microfrontends/open-microfrontends-generator": "file:../../../open-microfrontends-generator",
    "cpy-cli": "^6.0.0",
    "typescript": "^5.9.2",
    "@types/node": "22.18.6",
    "nodemon": "^3.1.10"
  },
  "scripts": {
    "generate": "omg ../microfrontends.yaml src/_generated -t renderers",
    "type-check": "tsc --noEmit",
    "build": "tsc && cpy ../microfrontends.yaml dist --flat",
    "start": "npm run build && http-server dist -p 7800 --cors -c-1",
    "dev": "nodemon --watch src --ext ts,html --exec \"npm run build && cpy src/testPage.html dist --flat && http-server dist -p 7800 --cors -c-1\""
  }
}
