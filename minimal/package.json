{
  "name": "@open-microfrontends/examples-minimal",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "typescript": "^5.8.3",
    "@types/node": "22.16.5",
    "@open-microfrontends/open-microfrontends-generator": "file:../../open-microfrontends-generator"
  },
  "scripts": {
    "generate": "omg microfrontends.yaml microfrontends/_generated -t renderersPlainJS,mashroomPluginConfig -a mashroomCategory=Demo && omg microfrontends.yaml test/_generated -t hostIntegrationBrowser",
    "type-check": "tsc --noEmit",
    "build": "tsc && cpy test/index.html dist/test --flat",
    "start": "npm run build && node dist/microfrontends/server"
  }
}
