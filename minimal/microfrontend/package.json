{
  "name": "@open-microfrontends/examples-minimal-microfrontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "typescript": "^5.8.3",
    "@types/node": "22.16.5",
    "@open-microfrontends/open-microfrontends-generator": "file:../../../open-microfrontends-generator"
  },
  "scripts": {
    "generate": "omg ../microfrontends.yaml _generated -t renderersPlainJS,mashroomPluginConfig -a mashroomCategory=Demo",
    "type-check": "tsc --noEmit",
    "build": "tsc && cpy dist/app1.js dist --rename=app1.mjs --flat && cpy ../microfrontends.yaml dist --flat && cpy package.json dist --flat && cpy _generated/mashroom.json dist --flat",
    "start": "npm run build && http-server dist -p 7890 --cors"
  }
}
