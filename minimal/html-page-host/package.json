{
  "name": "@open-microfrontends/examples-minimal-html-page-host",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "typescript": "^5.8.3",
    "@types/node": "22.16.5",
    "@open-microfrontends/open-microfrontends-generator": "file:../../../open-microfrontends-generator"
  },
  "scripts": {
    "generate": "omg ../microfrontends.yaml _generated -t hostIntegrationsBrowser",
    "type-check": "tsc --noEmit",
    "build": "tsc && cpy index.html dist --flat",
    "start": "npm run build && http-server dist -p 7895"
  }
}
