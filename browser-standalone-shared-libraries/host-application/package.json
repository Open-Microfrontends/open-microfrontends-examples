{
  "name": "@open-microfrontends/examples-browser-standalone-hello-world-host-application",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@open-microfrontends/types": "^1.0.0",
    "@open-microfrontends/generator": "^1.0.0",
    "cpy-cli": "^6.0.0",
    "typescript": "^5.9.2",
    "@types/node": "22.18.6"
  },
  "scripts": {
    "generate": "omg ../microfrontends1.yaml src/_generated/mf1 -t startersBrowserStandalone && omg ../microfrontends2.yaml src/_generated/mf2 -t startersBrowserStandalone",
    "type-check": "tsc --noEmit",
    "build": "tsc && cpy src/index.html dist --flat",
    "start": "npm run build && http-server dist -p 7910 -c-1"
  }
}
